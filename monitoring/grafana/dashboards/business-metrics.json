{
  "dashboard": {
    "title": "Znak Lavki - Business Metrics",
    "tags": ["znak-lavki", "business", "metrics"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "IDR Rate (Invalid Data Rate)",
        "type": "graph",
        "targets": [
          {
            "expr": "idr_rate{time_window=\"5m\"}",
            "legendFormat": "{{supplier}} - IDR Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percentunit",
            "label": "IDR Rate"
          }
        ],
        "alert": {
          "name": "High IDR Alert",
          "conditions": [
            {
              "evaluator": {
                "params": [0.01],
                "type": "gt"
              },
              "query": {
                "params": ["A", "5m", "now"]
              }
            }
          ]
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Mark Generation Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(marks_generated_total[5m])",
            "legendFormat": "{{gtin}} - Generation Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Marks/sec"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "Validation Success Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "(rate(mark_validation_success_total[5m]) / (rate(mark_validation_success_total[5m]) + rate(mark_validation_failure_total[5m]))) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 90 },
                { "color": "green", "value": 95 }
              ]
            },
            "min": 0,
            "max": 100,
            "unit": "percent"
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "Average Validation Time",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(mark_validation_duration_ms_bucket[5m])) by (le))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(mark_validation_duration_ms_bucket[5m])) by (le))",
            "legendFormat": "50th percentile (median)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 250 },
                { "color": "red", "value": 500 }
              ]
            },
            "unit": "ms"
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 8 }
      },
      {
        "id": 5,
        "title": "Active Marks Count",
        "type": "graph",
        "targets": [
          {
            "expr": "active_marks_count",
            "legendFormat": "{{supplier}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Count"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 6,
        "title": "Expired Marks",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(expired_marks_count)",
            "legendFormat": "Total Expired",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 500 },
                { "color": "red", "value": 1000 }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 16 }
      },
      {
        "id": 7,
        "title": "System Coverage",
        "type": "bargauge",
        "targets": [
          {
            "expr": "system_coverage_percentage",
            "legendFormat": "{{coverage_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 70 },
                { "color": "green", "value": 90 }
              ]
            },
            "min": 0,
            "max": 100,
            "unit": "percent"
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 16 }
      },
      {
        "id": 8,
        "title": "Mark Generation Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mark_generation_errors_total[5m])",
            "legendFormat": "{{error_type}} - {{supplier}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Errors/sec"
          }
        ],
        "alert": {
          "name": "High Generation Errors",
          "conditions": [
            {
              "evaluator": {
                "params": [10],
                "type": "gt"
              }
            }
          ]
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
      },
      {
        "id": 9,
        "title": "Validation Results Breakdown",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(rate(mark_validation_success_total[1h]))",
            "legendFormat": "Success",
            "refId": "A"
          },
          {
            "expr": "sum(rate(mark_validation_failure_total[1h]))",
            "legendFormat": "Failure",
            "refId": "B"
          }
        ],
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 20 }
      },
      {
        "id": 10,
        "title": "Mark Activity (24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(marks_generated_total[24h])",
            "legendFormat": "Generated",
            "refId": "A"
          },
          {
            "expr": "increase(marks_validated_total[24h])",
            "legendFormat": "Validated",
            "refId": "B"
          },
          {
            "expr": "increase(marks_blocked_total[24h])",
            "legendFormat": "Blocked",
            "refId": "C"
          }
        ],
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 20 }
      },
      {
        "id": 11,
        "title": "Top Suppliers by Mark Generation",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum(rate(marks_generated_total[1h])) by (gtin))",
            "legendFormat": "",
            "refId": "A",
            "format": "table"
          }
        ],
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 20 }
      }
    ]
  }
}
